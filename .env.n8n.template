# n8n Configuration Environment Variables
# Copy this file to .env and configure with your values

# Database Configuration
POSTGRES_PASSWORD=generate_secure_password_here

# n8n Host Configuration
N8N_HOST=n8n.example.com
N8N_EDITOR_BASE_URL=https://n8n.example.com/
WEBHOOK_URL=https://n8n.example.com/

# n8n Authentication
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=generate_secure_admin_password

# Security - Generate with: openssl rand -hex 16
N8N_ENCRYPTION_KEY=generate_32_char_random_string_here

# Email Configuration (for workflow notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASS=your-app-specific-password
SMTP_SENDER=devsecops-alerts@example.com

# OAuth2/OIDC Configuration (optional - for GCP authentication)
N8N_AUTH_TYPE=basic
# Uncomment and configure for Google OAuth
# N8N_AUTH_TYPE=google
# N8N_AUTH_GOOGLE_ENABLED=true
# GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
# GOOGLE_CLIENT_SECRET=your-client-secret

# Redis Password (for session management)
REDIS_PASSWORD=generate_secure_redis_password

# Caddy Configuration
ACME_EMAIL=admin@example.com

# Timezone
TZ=America/New_York

# Workflow Credentials (will be configured via UI or API)
# These are placeholders for documentation

# Google Chat Webhooks
GCHAT_SECURITY_WEBHOOK=https://chat.googleapis.com/v1/spaces/SPACE_ID/messages?key=KEY&token=TOKEN
GCHAT_DEV_WEBHOOK=https://chat.googleapis.com/v1/spaces/SPACE_ID/messages?key=KEY&token=TOKEN

# Gitea API
GITEA_API_TOKEN=generate_from_gitea_settings
GITEA_URL=https://gitea.example.com

# GCP Service Account (base64 encoded JSON key)
GCP_SERVICE_ACCOUNT_KEY=base64_encoded_service_account_json

# JIRA Configuration (optional)
JIRA_URL=https://your-domain.atlassian.net
JIRA_USER=your-jira-email@example.com
JIRA_API_TOKEN=generate_from_jira_settings

# PagerDuty Configuration (optional)
PAGERDUTY_API_KEY=generate_from_pagerduty_settings
PAGERDUTY_SERVICE_ID=your_service_id
PAGERDUTY_ESCALATION_POLICY=your_policy_id

# Webhook API Key for securing incoming webhooks
WEBHOOK_API_KEY=generate_secure_api_key_here

# GCS Buckets for Evidence
GCS_EVIDENCE_BUCKET=compliance-evidence-standard
GCS_EVIDENCE_BUCKET_CRITICAL=compliance-evidence-immutable

# Prometheus Pushgateway (optional)
PROMETHEUS_PUSHGATEWAY_URL=http://prometheus-pushgateway:9091