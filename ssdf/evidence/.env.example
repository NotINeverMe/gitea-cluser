# SSDF Evidence Collection Framework
# Environment Configuration Template
#
# Copy this file to .env and fill in your values:
# cp .env.example .env

# ============================================================================
# Gitea Configuration
# ============================================================================
GITEA_URL=http://localhost:3000
GITEA_TOKEN=your-gitea-personal-access-token

# ============================================================================
# SonarQube Configuration
# ============================================================================
SONARQUBE_URL=http://localhost:9000
SONARQUBE_TOKEN=your-sonarqube-token

# ============================================================================
# Google Cloud Storage
# ============================================================================
GCP_PROJECT=your-gcp-project-id
GCS_EVIDENCE_BUCKET=compliance-evidence-ssdf
GCS_LOCATION=us-central1
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# ============================================================================
# PostgreSQL Database
# ============================================================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=compliance
POSTGRES_USER=evidence_collector
POSTGRES_PASSWORD=your-secure-database-password

# ============================================================================
# Cosign Configuration (Optional)
# ============================================================================
COSIGN_KEY_PATH=/path/to/cosign.key
COSIGN_PUBLIC_KEY_PATH=/path/to/cosign.pub
COSIGN_PASSWORD=your-cosign-key-password

# ============================================================================
# Evidence Collection Settings
# ============================================================================
EVIDENCE_RETENTION_DAYS=2555
EVIDENCE_TEMP_DIR=/tmp/evidence-collection
EVIDENCE_SIGN=true

# ============================================================================
# Verification Settings
# ============================================================================
VERIFY_SIGNATURES=true
MINIMUM_COVERAGE=80.0

# ============================================================================
# Logging
# ============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/var/log/evidence-collector.log

# ============================================================================
# Notifications (Optional)
# ============================================================================
WEBHOOK_URL=https://your-webhook-endpoint.com/notify
ENABLE_NOTIFICATIONS=false

# ============================================================================
# n8n Integration (Optional)
# ============================================================================
N8N_URL=http://localhost:5678
N8N_API_KEY=your-n8n-api-key

# ============================================================================
# Additional Tool Configurations
# ============================================================================

# Trivy
TRIVY_CACHE_DIR=/tmp/trivy-cache

# Grype
GRYPE_DB_CACHE_DIR=/tmp/grype-db

# Syft
SYFT_CACHE_DIR=/tmp/syft-cache
